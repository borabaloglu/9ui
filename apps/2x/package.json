{
	"name": "2x",
	"private": true,
	"version": "0.0.0",
	"scripts": {
		"dev": "next dev -p 3001",
		"build": "pnpm prebuild && next build",
		"build:registry": "npx tsx --tsconfig ./tsconfig.scripts.json ./scripts/build-registry.ts && prettier --log-level silent --write \"public/r/*.json\" --cache",
		"start": "next start",
		"lint": "next lint",
		"generate:demos": "npx tsx --tsconfig ./tsconfig.scripts.json ./scripts/generate-demo-registry.ts && prettier --log-level silent --write \"src/__registry__/demos.tsx\" --cache",
		"generate:contents": "npx tsx --tsconfig ./tsconfig.scripts.json ./scripts/generate-content-registry.ts && prettier --log-level silent --write \"src/__registry__/contents.tsx\" --cache",
		"generate:llms": "npx tsx --tsconfig ./tsconfig.scripts.json ./scripts/generate-llms/index.ts",
		"generate:globals-css": "npx tsx --tsconfig ./tsconfig.scripts.json ./scripts/generate-globals-css.ts",
		"fix": "next lint --fix",
		"format": "prettier --log-level silent --write \"src/**/*.{js,ts,jsx,tsx,mdx}\" --cache",
		"prebuild": "pnpm generate:contents && pnpm generate:demos && pnpm generate:globals-css && pnpm generate:llms && pnpm build:registry"
	},
	"engines": {
		"node": ">=20"
	},
